<form id="{{formId}}">
    <div class="form-group required">
        <input id="{{fileChooserButtonId}}" name="{{fileChooserButtonName}}" value=selectedFile type="file" accept={{acceptValue}} {{action "fileChosen" on="change"}}>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-sm btn-default">Cancel</button>
        <button type="button" class="btn btn-sm btn-primary" {{action "doUpload"}}>{{uploadButtonTitle}}</button>
    </div>
</form>

